<div class="w-full max-w-xs mx-auto">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
    <div class="text-3xl font-bold pb-4">
        <h1>ログイン</h1>
      </div>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="block text-black-700 text-sm font-bold mb-2">
          <%= f.label :email , User.human_attribute_name(:email)%>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="block text-black-700 text-sm font-bold mb-2">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class='flex items-center justify-between'>
          <%= f.submit 'login', class: "text-white bg-gray-900 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        </div>
      <% end %>
      <div class='ttext-center text-gray-500 text-xs'>
        <%= link_to '新規登録はこちら', new_user_path %>
      </div>
    </div>
  </div>
</div>