<div class="container pt-3">
  <!-- プロフィール -->
  <section class="bg-white dark:bg-gray-900">
    <div class="grid max-w-screen-xl px-4 py-1 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
      <div class="lg:mt-0 lg:col-span-5 lg:flex">
        <%= image_tag @user.avatar.url, size: '200x200', class: 'w-100 h-100 rounded-full mb-4' %>
      </div>

      <div class="mr-auto place-self-center lg:col-span-7">
        <h1 class="max-w-2xl mb-4 text-2xl font-extrabold tracking-tight leading-none md:text-2xl xl:text-2xl dark:text-white inline-flex w-24">
          <%= @user.name %>
        </h1>
        <% if current_user&.me?(@user) %>
          <%= link_to 'ユーザー編集', edit_user_path, class: 'inline-flex items-center justify-center px-4 py-3 text-base font-medium text-center text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800' %>
        <% end %>
        <p class="max-w-2xl mt-2 mb-3 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400"><%= @user.bio %></p>
      </div>
    </div>
  </section>
    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">

  <!-- 作品一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @works.present? %>
          <%= render @works %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
