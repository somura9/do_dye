<h3>edit block</h3>
<% if @work_block.sentence? %>

  <!-- 文章編集フォーム -->
  <div class=" p-4 bg-gray-50 rounded-lg dark:bg-gray-800">
    <p class="text-sm text-gray-500 dark:text-gray-400">
    <a href="/?content=sentence"></a>
      <%= form_with model: @sentence, url: work_work_block_path(@work, @work_block), local: true do |f|%>
        <div>
          <%= f.hidden_field :blockable_type, :value => Sentence %>
          <%= f.label :body, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_area :body, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "tell your story" %>
        </div>
        <%= f.submit :GO, class: "text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      <% end %>
    </p>
  </div>

<% elsif @work_block.medium? %>
  <!-- 画像編集フォーム -->
  <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-800" id="settings" role="tabpanel" aria-labelledby="settings-tab">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        <%= form_with model: @medium, url: work_work_block_path(@work, @work_block), local: true do |f|%>
          <div>
            <%= f.hidden_field :blockable_type, :value => Medium %>
            <%= f.label :name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.file_field :name, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
          </div>
          <%= f.submit :GO, class: "text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        <% end %>
      </p>
  </div>

<% elsif @work_block.embed? %>
  <!-- 埋め込み編集フォーム -->
  <div class=" p-4 bg-gray-50 rounded-lg dark:bg-gray-800">
    <p class="text-sm text-gray-500 dark:text-gray-400">
      <%= form_with model: @embed, url: work_work_block_path(@work, @work_block), local: true do |f|%>
        <div>
          <%= f.hidden_field :blockable_type, :value => Embed %>
          <%= f.label :identifier, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :identifier, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "tell your story" %>
        </div>
        <%= f.submit :GO, class: "text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      <% end %>
    </p>
  </div>
<% end %>