<div class="w-full max-w-xs mx-auto">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">

    <div class="text-3xl font-bold pb-4">
      <h1>設定を追加する</h1>
    </div>

    <% if @blockable_type  == 'Sentence' %>
      <!-- 文章新規登録フォーム -->
      <div class=" p-4 bg-gray-50 rounded-lg dark:bg-gray-800">
        <p class="text-sm text-gray-500 dark:text-gray-400">
        <a href="/?content=sentence"></a>
          <%= form_with model: @sentence, url: work_work_blocks_path(@work, @work_block), local: true do |f|%>
            <div>
              <%= f.hidden_field :blockable_type, :value => Sentence %>
              <%= f.hidden_field :tab, :value => @tab %>
              <%= f.label :body, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_area :body, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
            </div>
            <%= f.submit :GO, class: "mt-3 text-white bg-gray-900 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
          <% end %>
        </p>
      </div>

    <% elsif @blockable_type  == 'Medium' %>
      <!-- 画像新規登録フォーム -->
      <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-800" id="settings" role="tabpanel" aria-labelledby="settings-tab">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            <%= form_with model: @medium, url: work_work_blocks_path(@work, @work_block), local: true do |f|%>
              <div>
                <%= f.hidden_field :blockable_type, :value => Medium %>
                <%= f.hidden_field :tab, :value => @tab %>
                <%= f.label :name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.file_field :name, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
              </div>
              <%= f.submit :GO, class: "mt-3 text-white bg-gray-900 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
            <% end %>
          </p>
      </div>

    <% elsif @blockable_type  == 'Embed' %>
      <!-- 埋め込み新規登録フォーム -->
      <div class=" p-4 bg-gray-50 rounded-lg dark:bg-gray-800">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          <%= form_with model: @embed, url: work_work_blocks_path(@work, @work_block), local: true do |f|%>
            <div>
              <%= f.hidden_field :blockable_type, :value => Embed %>
              <%= f.hidden_field :tab, :value => @tab %>
              <%= f.label :identifier, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= f.text_area :identifier, rows: 4, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "ツイートのurlをコピペして下さい。　ツイートの共有ボタンからツイートのリンクをコピーできます。" %>
            </div>
            <%= f.submit :GO, class: "mt-3 text-white bg-gray-900 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
          <% end %>
        </p>
      </div>
    <% end %>

  </div>
</div>